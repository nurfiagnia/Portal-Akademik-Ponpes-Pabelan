  <h1>Tabel Data Pengasuhan</h1>
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#form-pengasuhan">Pengasuhan Baru
  </button>
  <div id="form-pengasuhan" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- konten modal-->
      <div class="modal-content">
        <!-- heading modal -->
        <div class="modal-header">
          <h4 class="modal-title">Tambah Data Pengasuhan Baru</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!--end heading modal-->
        <!-- body modal -->
        <div class="modal-body">
          <%= form_tag do %>
            <div class="form-row">
              <div class="col-md-6">
                <%= text_field_tag :username, params[:username], class: "form-control",  placeholder: "Username" %>
              </div>
              <div class="col-md-6">
                <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <br>
            <%= text_field_tag :nama, params[:nama], class: "form-control",  placeholder: "Nama" %>
            <br>
            <%= select_tag(:jk, options_for_select([['Pria', 'Pria'], ['Wanita','Wanita']]), class: "form-control") %>
            <br>
            <%= text_field_tag :tempat, params[:tempat], class: "form-control", placeholder: "Tempat" %>
            <br>
            <%= date_field_tag :tanggal_lahir, params[:tanggal_lahir], class: "form-control", placeholder: "Tanggal Lahir", max: "#{DateTime.now.strftime "%Y-%m-%d"}" %>
            <br>
            <%= text_field_tag :alamat, params[:alamat], class: "form-control",  placeholder: "Alamat" %>
            <br>
            <%= number_field_tag :tlp, params[:tlp], class: "form-control", placeholder: "Telepon" %>
            </div>
            <br>
            <!-- footer modal -->
            <div class="modal-footer">
              <center><%= submit_tag 'Simpan', class: "btn btn-outline-primary" %></center>
            <% end %>
            </div>
            <!--end footer modal-->
        </div>
        <!--end body modal-->
      </div>
      <!--end konten modal-->
    </div>
<hr>
  <legend>Pengasuhan Putra</legend>
  <table class="table table-light">
    <tr>
      <th>Username</th>
      <th>Nama</th>
      <th>Jenis Kelamin</th>
      <th>Alamat</th>
      <th>Tempat</th>
      <th>Tanggal Lahir</th>
      <th>Nomor Telepon</th>
      <th></th>
    </tr>
    <% @pengasuhanputra.each do |pengasuhanputra| %>
    <tr>
      <td><%= pengasuhanputra.username %></td>
      <td><%= pengasuhanputra.nama %></td>
      <td><%= pengasuhanputra.jk %></td>
      <td><%= pengasuhanputra.alamat %></td>
      <td><%= pengasuhanputra.tempat %></td>
      <td><%= pengasuhanputra.tanggal_lahir %></td>
      <td><%= pengasuhanputra.tlp %></td>
      <td><%= link_to 'Hapus', admin_pengasuhan_path(pengasuhanputra), method: :delete %></td>
    </tr>
    <% end %>
  </table>
